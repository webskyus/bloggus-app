---
import BaseHead from "../components/Head.astro";
import Header from "@/components/Header.astro";
import styles from "@/styles/global.css";
import { ViewTransitions } from "astro:transitions";


const {
  title = "Bloggus | Astro App",
  description = "Bloggus it's web app where you can find a lot of post about your interests",
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <ViewTransitions />
  </head>

  <body>
    <Header />

    <main class="pl-[24px] pr-[24px]">
      <slot />
    </main>
  </body>
</html>
