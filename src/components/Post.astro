---
import {POST_TYPE, URLS} from "../utils/consts";
interface Props {
    title: string
    tags: string
    author: string
    date: string
    image: string
    authorAvatar: string
    postThumbnail: string
    postType: POST_TYPE
    postUrl: URLS
}

const {
    title= 'Boost your conversion rate',
    tags = 'Hi-Tech',
    author= 'Kate Horwitz',
    date = 'Mar 16, 2024',
    authorAvatar = 'https://randomuser.me/api/portraits/women/34.jpg',
    postThumbnail = 'https://picsum.photos/201/301',
    postType = POST_TYPE.POST_SM,
    postUrl = '/'
} = Astro.props as Props;

---

<article class={`
                  relative
                  ${postType} mb-[16px]
                  
                  rounded-[6px] overflow-hidden bg-gray-50 
                  cursor-pointer shadow transition-all 
                  hover:shadow-md 
                  
                  after:absolute after:top-[0] after:bottom-[0] after:right-[0] 
                  after:left-[0] after:bg-gray-900 after:opacity-30
              `}>
   <a href={postUrl}>
       <div class={`relative flex flex-col h-full p-[8px] md:p-[16px] z-10`}>
           <span class={`absolute top-0 right-0 mt-[20px] mr-[16px] font-light text-white`}>{tags}</span>

           <div class={`flex items-center mt-auto`}>
               <div class={`flex items-center  rounded-full`}>
                   <img class={`rounded-full float-left h-full`} height="24" width="24"
                        src={authorAvatar}>
                   <span class={`ml-[4px] font-light text-[14px] text-white line-clamp-1`}>{author}</span>
               </div>

               <span class={`w-2 h-2 ml-[8px] rounded-full bg-yellow-400`}/>

               <time class={`ml-[8px] font-light text-[14px] text-white line-clamp-1`}
                     datetime={date}>
                   {date}
               </time>
           </div>

           <h3 class={`font-bold mt-[8px] text-white line-clamp-3`}>{title}</h3>
       </div>

       <img src={postThumbnail}
            class={`absolute z-0 top-0 left-0 bottom-0 right-0 w-full h-full`}>
   </a>
</article>
